{
  "compilerOptions": {
    "module": "esnext",
    "target": "es6",
    "esModuleInterop": true,
    "lib": ["dom", "es6", "esnext"],
    "types": ["node"],
    "moduleResolution": "bundler",
    "noEmit": true,
    "allowJs": true,
    "checkJs": true,

    /* Preact Config */
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "skipLibCheck": true,
    "paths": {
      "react": ["./node_modules/preact/compat/"],
      "react-dom": ["./node_modules/preact/compat/"]
    }
  },
  "include": ["node_modules/vite/client.d.ts", "**/*"]
}
